<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fif.iclass">

    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.fif.iclass.app.FIFApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        tools:replace="icon,label"
        android:supportsRtl="true"
        android:persistent="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="design_width" android:value="360"/>
        <meta-data android:name="design_height" android:value="640"/>
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="59c9f77a310c932db3000093">
        </meta-data>
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="12da540bf78bc373cbe89aab67b70573">
        </meta-data>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />
        <!--android:theme="@style/SplashTheme"-->
        <activity
            android:name="com.fif.iclass.app.SplashActivity"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fif.iclass.main.LoginActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fif.iclass.main.MainActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fif.iclass.main.SoftwareUpdateActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/DialogActivity"
            android:screenOrientation="portrait" />
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.fif.campus.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>